@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entities.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="~/EShop/css/main.css" rel="stylesheet" />
<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-sm-6">
                                <h1 style="color: #76B064"><span style="color: #76B064">E</span><span style="color: #FE980F">-</span>CAR</h1>
                                <h2>7/24 CANLI MÜŞTERİ DESTEĞİ</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                <button type="button" class="btn btn-default get" style="background-color: #76B064">Daha Fazlası</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/slider-photo-5.jpg" class="car img-responsive" alt="" />
                                @*<img src="~/eshop/images/home/slider-photo1.jpg" class="pricing" alt="" />*@
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1 style="color: #76B064"><span style="color: #76B064">E</span><span style="color: #FE980F">-</span>CAR</h1>
                                <h2>ÜCRETSİZ EKSPERTİZ HİZMETİ</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                <button type="button" class="btn btn-default get" style="background-color: #76B064">Daha Fazlası</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/slider-photo-7.jpg" class="car img-responsive" alt="" />
                                @*<img src="~/eshop/images/home/slider-photo-2.jpg" class="pricing" alt="" />*@
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1 style="color: #76B064"><span style="color: #76B064">E</span><span style="color: #FE980F">-</span>CAR</h1>
                                <h2>ONAYLANMIŞ ÜRÜNLER</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                <button type="button" class="btn btn-default get" style="background-color: #76B064">Daha Fazlası</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/slider-photo-3.jpg" class="car img-responsive" alt="" />
                                @*<img src="~/eshop/images/home/slider-photo-3.jpg" class="pricing" alt="" />*@
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            @Html.Action("CategoryList", "Category")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center" style="color: #76B064">ÜRÜNLERİMİZ</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <a href="/Product/Details/@item.Id"><img src="~/Content/Image/@item.Image" width="65" height="110" alt="" /></a>
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/ProductDetails/@item.Id" class="btn btn-default add-to-cart ">Ürün Detay</a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }

                    @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)



                </div><!--features_items-->
                @Html.Action("PopularProduct", "Product")

            </div>
        </div>
    </div>
</section>
